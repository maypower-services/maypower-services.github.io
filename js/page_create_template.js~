var template = 0;
function open_preview() {
    var url = '/page_template_preview?template=' + template;
    var win = window.open(url, '_blank');
    win.focus();
}
function continue_to_create() {
    var url = '/page_create?template=' + template;
    window.location = url;
}
function select_template(e, ID) {
    template = ID;
    $('.primary-card').removeClass('primary-card');
    $(e).toggleClass('primary-card');
    $('#template-navbar').fadeIn();
    $('#static-title').css('opacity', 0);
}
